<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Express Demo with Hull Auth</title>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script src="//js.hull.dev/dist/develop/hull.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://hullstrap.s3.amazonaws.com/stylesheets/hullstrap.css">
    <script>
      Hull.init(<%- JSON.stringify(config) %>);
    </script>
  </head>
  <body>
      
    <div class="container">
      <% if (current_user) { %>
      <h1>Current User</h1>
      <pre><%- JSON.stringify(current_user) %></pre>
      <hr />
      <div data-hull-widget="identity@hull"></div>
      <% } else { %>

      <form class="form-horizontal" action="/passport" method="post">
        <div class="control-group">
          <label class="control-label" for="username">Username</label>
          <div class="controls">
            <input id="username" name="username" type="text" placeholder="Username" />
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password">Password</label>
          <div class="controls">
            <input id="password" name="password" type="password" placeholder="Password" />
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button class="btn" type="submit">Login</button>
          </div>
        </div>
      </form>

      <% } %>
    </div>

    <div data-hull-widget="footer@hull"></div>
    
  </body>
</html>