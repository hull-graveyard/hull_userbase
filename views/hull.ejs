<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Express Demo with Hull Auth</title>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script src="//d3f5pyioow99x0.cloudfront.net/develop/hull.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://hullstrap.s3.amazonaws.com/stylesheets/hullstrap.css">
    <script>
      Hull.on('hull.authComplete', function() {
        _.delay(document.location.reload, 1000);
      });
      Hull.init(<%- JSON.stringify(config) %>);
    </script>
  </head>
  <body>

    <div class="container">
      
      <div class="hero-unit">
        <h1>Authenticate with Hull</h1>
      </div>
      
      <h3>Hull Identity Widget</h3>
      <div data-hull-widget="identity@hull"></div>

      <h3>User logged in ?</h3>
      <pre>
        <%= JSON.stringify(current_user) %>
      </pre>

    </div>

    <div data-hull-widget="footer@hull"></div>
    
  </body>
</html>
