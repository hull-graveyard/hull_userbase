!!!
html
  head
    title hull.io - user base demo
  body
    div.container
      div(data-hull-widget="identity@hull")
      form.form-horizontal(action="/login", method="post")
        div.control-group
          label.control-label(for="username") Username
          div.controls
            input(id="username",name="username",type="text",placeholder="Username")
        div.control-group
          label.control-label(for="password") Password
          div.controls
            input#password(name="password",type="password",placeholder="Password")
        div.control-group
          div.controls
            button.btn(type="submit") Login
    script(src="//code.jquery.com/jquery-2.0.0.js")
    script(src="//js.hull.dev/dist/develop/hull.js")
    script
      Hull.init({
        appId: "50d5b206a5b190d0aa000004",
        orgUrl: "http://super.hullapp.dev"
      });
    link(rel="stylesheet",href="//hullstrap.s3.amazonaws.com/0.1/hullstrap.css")
    h1 User Name: #{user && user.name}
    div User Description: #{user && user.description}
